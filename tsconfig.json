{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@ctrl-freaq/shared-data": ["./packages/shared-data/src/index.ts"],
      "@ctrl-freaq/shared-data/*": ["./packages/shared-data/src/*.ts"],
      "@ctrl-freaq/templates": ["./packages/templates/src/index.ts"],
      "@ctrl-freaq/templates/*": ["./packages/templates/src/*.ts"],
      "@ctrl-freaq/ai": ["./packages/ai/src/index.ts"],
      "@ctrl-freaq/ai/*": ["./packages/ai/src/*.ts"],
      "@ctrl-freaq/qa": ["./packages/qa/src/index.ts"],
      "@ctrl-freaq/qa/*": ["./packages/qa/src/*.ts"],
      "@ctrl-freaq/exporter": ["./packages/exporter/src/index.ts"],
      "@ctrl-freaq/exporter/*": ["./packages/exporter/src/*.ts"],
      "@ctrl-freaq/editor-core": ["./packages/editor-core/src/index.ts"],
      "@ctrl-freaq/editor-core/*": ["./packages/editor-core/src/*.ts"],
      "@ctrl-freaq/editor-persistence": [
        "./packages/editor-persistence/src/index.ts"
      ],
      "@ctrl-freaq/editor-persistence/*": [
        "./packages/editor-persistence/src/*.ts"
      ],
      "@ctrl-freaq/editor-persistence/assumption-sessions/*": [
        "./packages/editor-persistence/src/assumption-sessions/*.ts"
      ],
      "@ctrl-freaq/template-resolver": [
        "./packages/template-resolver/src/index.ts"
      ],
      "@ctrl-freaq/template-resolver/*": [
        "./packages/template-resolver/src/*.ts"
      ]
    }
  },
  "references": [
    { "path": "./apps/web" },
    { "path": "./apps/api" },
    { "path": "./packages/shared-data" },
    { "path": "./packages/templates" },
    { "path": "./packages/ai" },
    { "path": "./packages/qa" },
    { "path": "./packages/exporter" },
    { "path": "./packages/editor-core" },
    { "path": "./packages/editor-persistence" },
    { "path": "./packages/template-resolver" }
  ],
  "exclude": ["node_modules", "dist", "build", ".next", "coverage"]
}
