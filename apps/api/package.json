{
  "name": "@ctrl-freaq/api",
  "version": "0.1.0",
  "description": "CTRL FreaQ Express.js API server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:deps": "pnpm --filter @ctrl-freaq/shared-data build && pnpm --filter @ctrl-freaq/templates build && pnpm --filter @ctrl-freaq/template-resolver build && pnpm --filter @ctrl-freaq/qa build && pnpm --filter @ctrl-freaq/editor-core build && pnpm --filter @ctrl-freaq/editor-persistence build && pnpm --filter @ctrl-freaq/ai build",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "dev": "tsx watch src/index.ts",
    "prelint": "pnpm run build:deps",
    "lint": "eslint src/ tests/",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "pretypecheck": "pnpm run build:deps",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clerk/express": "^1.0.0",
    "@ctrl-freaq/editor-core": "workspace:*",
    "@ctrl-freaq/qa": "workspace:*",
    "@ctrl-freaq/shared-data": "workspace:*",
    "@ctrl-freaq/template-resolver": "workspace:*",
    "@ctrl-freaq/templates": "workspace:*",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "uuid": "^10.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^5.0.0",
    "@types/node": "^24.9.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
