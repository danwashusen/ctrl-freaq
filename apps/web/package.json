{
  "name": "@ctrl-freaq/web",
  "version": "0.1.0",
  "description": "CTRL FreaQ React frontend application",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build",
    "build:deps": "pnpm --filter @ctrl-freaq/shared-data build && pnpm --filter @ctrl-freaq/editor-core build && pnpm --filter @ctrl-freaq/template-resolver build && pnpm --filter @ctrl-freaq/templates build && pnpm --filter @ctrl-freaq/qa build && pnpm --filter @ctrl-freaq/editor-persistence build",
    "check:bundle": "node ./scripts/check-bundle.mjs",
    "clean": "rm -rf dist .next tsconfig.tsbuildinfo",
    "dev": "vite",
    "dev:e2e": "CTRL_FREAQ_PROFILE=fixture VITE_E2E=true vite --mode e2e",
    "dev:live": "vite --mode live",
    "prelint": "pnpm run build:deps",
    "lint": "eslint src/ tests/",
    "preview": "vite preview",
    "test": "vitest run",
    "test:e2e": "pnpm run test:e2e:quick",
    "test:e2e:ci": "playwright test -c playwright.fixture.config.ts --reporter=line,junit --workers=1 --forbid-only --retries=2",
    "test:e2e:debug": "playwright test -c playwright.fixture.config.ts --debug",
    "test:e2e:headed": "playwright test -c playwright.fixture.config.ts --headed",
    "test:e2e:quick": "playwright test -c playwright.fixture.config.ts",
    "test:e2e:ui": "playwright test -c playwright.fixture.config.ts --ui",
    "test:live": "playwright test -c playwright.live.config.ts",
    "test:performance": "vitest run tests/performance",
    "test:visual": "pnpm run test:visual:quick",
    "test:visual:ci": "playwright test tests/e2e/visual --reporter=line,junit --workers=1 --forbid-only --retries=2",
    "test:visual:quick": "playwright test tests/e2e/visual",
    "test:visual:update": "playwright test tests/e2e/visual --update-snapshots",
    "test:watch": "vitest --watch",
    "pretypecheck": "pnpm run build:deps",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.0.0",
    "@ctrl-freaq/editor-core": "workspace:*",
    "@ctrl-freaq/editor-persistence": "workspace:*",
    "@ctrl-freaq/qa": "workspace:*",
    "@ctrl-freaq/templates": "workspace:*",
    "@milkdown/core": "7.15.5",
    "@milkdown/plugin-history": "7.17.1",
    "@milkdown/plugin-listener": "7.15.5",
    "@milkdown/preset-commonmark": "7.17.1",
    "@milkdown/react": "7.17.1",
    "@milkdown/theme-nord": "7.16.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@tanstack/react-query": "^5.90.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "immer": "^10.1.3",
    "lucide-react": "^0.546.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@next/eslint-plugin-next": "^15.5.5",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  }
}
