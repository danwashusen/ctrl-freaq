{
  "name": "@ctrl-freaq/web",
  "version": "0.1.0",
  "description": "CTRL FreaQ React frontend application",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build",
    "check:bundle": "node ./scripts/check-bundle.mjs",
    "clean": "rm -rf dist .next",
    "dev": "vite",
    "lint": "eslint src/ tests/",
    "preview": "vite preview",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test tests/e2e/visual",
    "test:visual:update": "playwright test tests/e2e/visual --update-snapshots",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.0.0",
    "@ctrl-freaq/templates": "workspace:*",
    "@milkdown/core": "7.15.5",
    "@milkdown/plugin-history": "7.15.5",
    "@milkdown/plugin-listener": "7.15.5",
    "@milkdown/preset-commonmark": "7.15.5",
    "@milkdown/react": "7.15.5",
    "@milkdown/theme-nord": "7.15.5",
    "@radix-ui/react-slot": "^1.1.0",
    "@tanstack/react-query": "^5.89.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "immer": "^10.1.3",
    "lucide-react": "^0.439.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.3",
    "@playwright/test": "^1.45.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
