# Authentication provider selection
# Tests and local development default to simple auth; production stays on Clerk.
VITE_AUTH_PROVIDER=simple

# Clerk Authentication (required when VITE_AUTH_PROVIDER=clerk)
# VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# API Configuration
VITE_API_BASE_URL=http://localhost:5001/api/v1

# Event stream (SSE) hub feature flag
# Disabled unless VITE_ENABLE_SSE_HUB=true. Align with API ENABLE_EVENT_STREAM.
# VITE_ENABLE_SSE_HUB=false
