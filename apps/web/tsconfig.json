{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@ctrl-freaq/editor-persistence": [
        "../../packages/editor-persistence/src/index"
      ],
      "@ctrl-freaq/editor-persistence/*": [
        "../../packages/editor-persistence/src/*"
      ],
      "@ctrl-freaq/editor-persistence/assumption-sessions/*": [
        "../../packages/editor-persistence/src/assumption-sessions/*"
      ],
      "@ctrl-freaq/qa": ["../../packages/qa/src/index.ts"],
      "@ctrl-freaq/qa/*": ["../../packages/qa/src/*"],
      "@ctrl-freaq/templates": ["../../packages/templates/src/index"],
      "@ctrl-freaq/templates/*": ["../../packages/templates/src/*"],
      "@ctrl-freaq/template-resolver": [
        "../../packages/template-resolver/src/index"
      ],
      "@ctrl-freaq/template-resolver/*": [
        "../../packages/template-resolver/src/*"
      ]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
