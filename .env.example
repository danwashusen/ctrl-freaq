# Authentication provider selection
# Set to 'clerk' (default) for production auth or 'simple' for local YAML-based auth.
AUTH_PROVIDER=clerk

# Simple auth configuration (required when AUTH_PROVIDER=simple)
# Point to a YAML file defining local users. Relative paths resolve from repo root.
# SIMPLE_AUTH_USER_FILE=./local/simple-auth-users.yaml

# Clerk Authentication (Required when AUTH_PROVIDER=clerk)
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Optional: Override default ports
# PORT=5001
# VITE_PORT=5173

# Optional: Database path
# DATABASE_PATH=./data/ctrl-freaq.db

# Optional: CORS settings
# CORS_ORIGIN=http://localhost:5173

# Optional: Rate limiting
# RATE_LIMIT_WINDOW=900000
# RATE_LIMIT_MAX=100
