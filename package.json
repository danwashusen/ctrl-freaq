{
  "name": "ctrl-freaq",
  "version": "0.1.0",
  "private": true,
  "description": "AI-optimized documentation system with library-first architecture",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean && rm -rf node_modules",
    "commitlint": "pnpm exec commitlint",
    "dev": "turbo dev --concurrency=12",
    "dev:apps": "turbo dev --filter=@ctrl-freaq/web --filter=@ctrl-freaq/api",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo lint --force && pnpm lint:repo",
    "lint:ci": "eslint . --max-warnings=0 --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:fix:check": "eslint . --ext .ts,.tsx,.js,.jsx --fix-dry-run",
    "lint:quick": "turbo lint && pnpm lint:repo",
    "lint:repo": "eslint . --cache --ext .ts,.tsx,.js,.jsx",
    "lint:yaml": "eslint . --ext .yml,.yaml",
    "prepare": "husky",
    "template:activate": "pnpm --filter @ctrl-freaq/templates run cli -- activate",
    "template:list": "pnpm --filter @ctrl-freaq/templates run cli -- list",
    "template:migrate": "pnpm --filter @ctrl-freaq/templates run cli -- migrate",
    "template:publish": "pnpm --filter @ctrl-freaq/templates run cli -- publish",
    "test": "pnpm run test:gauntlet",
    "test:ci": "pnpm run lint && pnpm run typecheck && pnpm run test",
    "test:e2e": "pnpm --filter @ctrl-freaq/web run test:e2e:quick",
    "test:e2e:ci": "pnpm --filter @ctrl-freaq/web run test:e2e:ci",
    "test:e2e:quick": "pnpm --filter @ctrl-freaq/web run test:e2e:quick",
    "test:gauntlet": "pnpm run test:unit:ci && pnpm run test:e2e:ci && pnpm run test:visual:ci",
    "test:live": "pnpm --filter @ctrl-freaq/web run test:live",
    "test:quick": "turbo run test",
    "test:unit:ci": "turbo run test --force --no-cache",
    "test:visual": "pnpm --filter @ctrl-freaq/web run test:visual:quick",
    "test:visual:ci": "pnpm --filter @ctrl-freaq/web run test:visual:ci",
    "test:visual:quick": "pnpm --filter @ctrl-freaq/web run test:visual:quick",
    "typecheck": "turbo typecheck --force",
    "typecheck:quick": "turbo typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-yml": "^1.14.0",
    "globals": "^16.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.2.3",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.0.12",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4",
    "yaml-eslint-parser": "^1.2.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "dompurify": "^3.2.4",
      "jsondiffpatch": "^0.7.2",
      "nanoid": "^3.3.8"
    }
  }
}
