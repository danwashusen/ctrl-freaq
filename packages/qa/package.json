{
  "name": "@ctrl-freaq/qa",
  "version": "0.1.0",
  "description": "Quality assurance and validation library for CTRL FreaQ documentation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-qa": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "cli": "tsx src/cli.ts"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "zod": "^3.23.0",
    "joi": "^17.0.0",
    "ajv": "^8.0.0",
    "chalk": "^5.0.0"
  },
  "devDependencies": {
    "@types/joi": "^17.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validators/*": {
      "import": "./dist/validators/*.js",
      "types": "./dist/validators/*.d.ts"
    },
    "./gates/*": {
      "import": "./dist/gates/*.js",
      "types": "./dist/gates/*.d.ts"
    }
  }
}