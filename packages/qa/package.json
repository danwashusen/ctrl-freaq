{
  "name": "@ctrl-freaq/qa",
  "version": "0.1.0",
  "description": "Quality assurance and validation library for CTRL FreaQ documentation",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    },
    "./validators/*": {
      "import": "./dist/validators/*.js",
      "types": "./dist/validators/*.d.ts"
    },
    "./gates/*": {
      "import": "./dist/gates/*.js",
      "types": "./dist/gates/*.d.ts"
    },
    "./traceability/*": {
      "import": "./dist/traceability/*.js",
      "types": "./dist/traceability/*.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-qa": "dist/cli.js"
  },
  "scripts": {
    "prebuild": "pnpm --filter @ctrl-freaq/shared-data build",
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "pretypecheck": "pnpm --filter @ctrl-freaq/shared-data build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ctrl-freaq/editor-core": "workspace:*",
    "@ctrl-freaq/shared-data": "workspace:*",
    "ajv": "^8.0.0",
    "chalk": "^5.0.0",
    "commander": "^14.0.1",
    "joi": "^18.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/joi": "^17.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
