{
  "name": "@ctrl-freaq/exporter",
  "version": "0.1.0",
  "description": "Document export library for CTRL FreaQ supporting multiple formats",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./formats/*": {
      "import": "./dist/formats/*.js",
      "types": "./dist/formats/*.d.ts"
    },
    "./exporters/*": {
      "import": "./dist/exporters/*.js",
      "types": "./dist/exporters/*.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-exporter": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "archiver": "^7.0.0",
    "commander": "^14.0.1",
    "jspdf": "^3.0.3",
    "markdown-it": "^14.0.0",
    "puppeteer": "^24.23.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.4",
    "@types/markdown-it": "^14.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
