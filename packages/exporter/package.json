{
  "name": "@ctrl-freaq/exporter",
  "version": "0.1.0",
  "description": "Document export library for CTRL FreaQ supporting multiple formats",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-exporter": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "cli": "tsx src/cli.ts"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "zod": "^3.23.0",
    "puppeteer": "^22.0.0",
    "markdown-it": "^14.0.0",
    "jspdf": "^2.5.0",
    "archiver": "^7.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.0",
    "@types/markdown-it": "^14.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./formats/*": {
      "import": "./dist/formats/*.js",
      "types": "./dist/formats/*.d.ts"
    },
    "./exporters/*": {
      "import": "./dist/exporters/*.js",
      "types": "./dist/exporters/*.d.ts"
    }
  }
}