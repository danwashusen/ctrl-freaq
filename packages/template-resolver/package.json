{
  "name": "@ctrl-freaq/template-resolver",
  "version": "0.1.0",
  "description": "Template resolution and dependency management library for CTRL FreaQ",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./resolvers/*": {
      "import": "./dist/resolvers/*.js",
      "types": "./src/resolvers/*.ts",
      "default": "./dist/resolvers/*.js"
    },
    "./dependencies/*": {
      "import": "./dist/dependencies/*.js",
      "types": "./src/dependencies/*.ts",
      "default": "./dist/dependencies/*.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-template-resolver": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "glob": "^11.0.3",
    "path-to-regexp": "^8.0.0",
    "yaml": "^2.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
