{
  "name": "@ctrl-freaq/editor-core",
  "version": "0.1.0",
  "description": "WYSIWYG editor core library for CTRL FreaQ documentation editing",
  "type": "module",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./editor/*": {
      "development": "./src/editor/*.ts",
      "import": "./dist/editor/*.js",
      "types": "./src/editor/*.ts",
      "default": "./dist/editor/*.js"
    },
    "./extensions/*": {
      "development": "./src/extensions/*.ts",
      "import": "./dist/extensions/*.js",
      "types": "./src/extensions/*.ts",
      "default": "./dist/extensions/*.js"
    },
    "./quality-gates/*": {
      "development": "./src/quality-gates/*.ts",
      "import": "./dist/quality-gates/*.js",
      "types": "./src/quality-gates/*.ts",
      "default": "./dist/quality-gates/*.js"
    }
  },
  "main": "dist/index.js",
  "types": "src/index.ts",
  "bin": {
    "ctrl-freaq-editor-core": "dist/cli.js"
  },
  "scripts": {
    "prebuild": "pnpm --filter @ctrl-freaq/shared-data build",
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "pretypecheck": "pnpm --filter @ctrl-freaq/shared-data build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ctrl-freaq/shared-data": "workspace:*",
    "@milkdown/core": "7.17.1",
    "@milkdown/plugin-history": "7.17.1",
    "@milkdown/plugin-listener": "7.17.1",
    "@milkdown/preset-commonmark": "7.17.1",
    "@milkdown/react": "7.17.1",
    "@milkdown/theme-nord": "7.16.0",
    "@types/diff-match-patch": "^1.0.36",
    "commander": "^14.0.2",
    "diff-match-patch": "^1.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
