{
  "name": "@ctrl-freaq/editor-core",
  "version": "0.1.0",
  "description": "WYSIWYG editor core library for CTRL FreaQ documentation editing",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./editor/*": {
      "import": "./dist/editor/*.js",
      "types": "./dist/editor/*.d.ts"
    },
    "./extensions/*": {
      "import": "./dist/extensions/*.js",
      "types": "./dist/extensions/*.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-editor-core": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@milkdown/core": "7.15.5",
    "@milkdown/plugin-history": "7.15.5",
    "@milkdown/plugin-listener": "7.15.5",
    "@milkdown/preset-commonmark": "7.16.0",
    "@milkdown/react": "7.16.0",
    "@milkdown/theme-nord": "7.15.5",
    "@types/diff-match-patch": "^1.0.36",
    "commander": "^14.0.1",
    "diff-match-patch": "^1.0.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4"
  }
}
