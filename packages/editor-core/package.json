{
  "name": "@ctrl-freaq/editor-core",
  "version": "0.1.0",
  "description": "WYSIWYG editor core library for CTRL FreaQ documentation editing",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./editor/*": {
      "import": "./dist/editor/*.js",
      "types": "./dist/editor/*.d.ts"
    },
    "./extensions/*": {
      "import": "./dist/extensions/*.js",
      "types": "./dist/extensions/*.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-editor-core": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tiptap/core": "^2.0.0",
    "@tiptap/extension-document": "^2.0.0",
    "@tiptap/extension-paragraph": "^2.0.0",
    "@tiptap/extension-text": "^3.4.4",
    "@tiptap/pm": "^2.0.0",
    "commander": "^12.0.0",
    "prosemirror-state": "^1.4.0",
    "prosemirror-view": "^1.32.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
