{
  "name": "@ctrl-freaq/shared-data",
  "version": "0.1.0",
  "description": "Shared data models and repositories for CTRL FreaQ",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./models/*": {
      "import": "./dist/models/*.js",
      "types": "./dist/models/*.d.ts"
    },
    "./repositories/*": {
      "import": "./dist/repositories/*.js",
      "types": "./dist/repositories/*.d.ts"
    },
    "./types/*": {
      "import": "./dist/types/*.js",
      "types": "./dist/types/*.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-shared-data": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "pino": "^9.5.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
