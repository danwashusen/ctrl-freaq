{
  "name": "@ctrl-freaq/shared-data",
  "version": "0.1.0",
  "description": "Shared data models and repositories for CTRL FreaQ",
  "type": "module",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./models/*": {
      "development": "./src/models/*.ts",
      "import": "./dist/models/*.js",
      "types": "./src/models/*.ts",
      "default": "./dist/models/*.js"
    },
    "./repositories/*": {
      "development": "./src/repositories/*.ts",
      "import": "./dist/repositories/*.js",
      "types": "./src/repositories/*.ts",
      "default": "./dist/repositories/*.js"
    },
    "./types/*": {
      "development": "./src/types/*.ts",
      "import": "./dist/types/*.js",
      "types": "./src/types/*.ts",
      "default": "./dist/types/*.js"
    },
    "./utils/*": {
      "development": "./src/utils/*.ts",
      "import": "./dist/utils/*.js",
      "types": "./src/utils/*.ts",
      "default": "./dist/utils/*.js"
    },
    "./migrations": {
      "development": "./src/migrations/index.ts",
      "import": "./dist/migrations/index.js",
      "types": "./src/migrations/index.ts",
      "default": "./dist/migrations/index.js"
    },
    "./migrations/*": {
      "development": "./src/migrations/*.ts",
      "import": "./dist/migrations/*.js",
      "types": "./src/migrations/*.ts",
      "default": "./dist/migrations/*.js"
    }
  },
  "main": "dist/index.js",
  "types": "src/index.ts",
  "bin": {
    "ctrl-freaq-shared-data": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "migrate": "tsx src/scripts/migrate.ts",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "commander": "^14.0.1",
    "pino": "^9.12.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^24.5.2",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4"
  }
}
