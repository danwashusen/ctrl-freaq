{
  "name": "@ctrl-freaq/templates",
  "version": "0.1.0",
  "description": "YAML template engine for CTRL FreaQ documentation generation",
  "keywords": [
    "templates",
    "cli",
    "documentation",
    "publish"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./templates/*": {
      "import": "./dist/templates/*.js",
      "types": "./dist/templates/*.d.ts"
    },
    "./parsers/*": {
      "import": "./dist/parsers/*.js",
      "types": "./dist/parsers/*.d.ts"
    },
    "./validators": {
      "import": "./dist/validators/index.js",
      "types": "./dist/validators/index.d.ts"
    },
    "./validators/*": {
      "import": "./dist/validators/*.js",
      "types": "./dist/validators/*.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-templates": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:deps": "pnpm --filter @ctrl-freaq/shared-data build",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "cli": "tsx src/cli.ts",
    "cli:activate": "tsx src/cli.ts activate",
    "cli:list": "tsx src/cli.ts list",
    "cli:migrate": "tsx src/cli.ts migrate",
    "cli:publish": "tsx src/cli.ts publish",
    "dev": "tsc --watch",
    "prelint": "pnpm run build:deps",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "pretypecheck": "pnpm run build:deps",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ctrl-freaq/shared-data": "workspace:*",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.1",
    "mustache": "^4.2.0",
    "pino": "^10.0.0",
    "yaml": "^2.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/mustache": "^4.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
