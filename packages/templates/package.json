{
  "name": "@ctrl-freaq/templates",
  "version": "0.1.0",
  "description": "YAML template engine for CTRL FreaQ documentation generation",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./templates/*": {
      "import": "./dist/templates/*.js",
      "types": "./dist/templates/*.d.ts"
    },
    "./parsers/*": {
      "import": "./dist/parsers/*.js",
      "types": "./dist/parsers/*.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctrl-freaq-templates": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "cli": "tsx src/cli.ts",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chokidar": "^3.5.0",
    "commander": "^12.0.0",
    "mustache": "^4.2.0",
    "yaml": "^2.3.0",
    "zod": "^3.23.0",
    "@ctrl-freaq/shared-data": "workspace:*",
    "better-sqlite3": "^11.0.0",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.0",
    "@types/better-sqlite3": "^7.6.9",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
